1.
#include <iostream>
using namespace std;
int main() {
    int i = 0;
    while (i <= 10) {
        cout << i << "\n";
        i++;
    }
    
    cout << "\n";
    
    int x = 10;
    while (x >= 0) {
        cout << x << "\n";
        x--;
    }
    return 0;
}

2.
#include <iostream>
using namespace std;
int main() {
    
    int num, sum;
    
    cout << "Enter a number(Press 0 to stop): ";
    cin >> num;
    
    while(num != 0) {
        if (num > 0){
        sum+=num;
        }
        cout << "Enter a number: ";
        cin >>num;
    }
    cout << "The sum of all entered number is: " << sum;
    
    
    return 0;
}

3.
#include <iostream>
using namespace std;
int main() {
    
    int product = 1;
    int num = 1;
    
    while (num <= 5) {
        product *= num;
        num++;
    }
    cout << "Product of numbers from 1 to 5 is: " << product << endl;
    return 0;
}
